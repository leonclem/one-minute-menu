{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --no-audit --no-fund",
  "framework": "nextjs",
  "regions": ["sin1"],
  "functions": {
    "src/app/api/**/route.ts": {
      "memory": 1536,
      "maxDuration": 30,
      "includeFiles": "node_modules/@sparticuz/chromium/**"
    }
  },
  "build": {
    "env": {
      "PUPPETEER_SKIP_DOWNLOAD": "true"
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": false
    }
  },
  "headers": [
    {
      "source": "/u/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=3600"
        }
      ]
    }
  ]
}