# Production Environment Variables
# Copy this to .env.production for production deployment

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# App Configuration
NEXTAUTH_SECRET=your-production-secret-key
NEXTAUTH_URL=https://your-domain.com

# Feature Flags (Production)
NEXT_PUBLIC_ENABLE_OCR=true
NEXT_PUBLIC_ENABLE_AI_PARSING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEVER SET THIS TO TRUE IN PRODUCTION:
NEXT_PUBLIC_ENABLE_DEV_AUTH=false

# Performance Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=8388608
NEXT_PUBLIC_PERFORMANCE_BUDGET=133120

# API Keys (Production)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
OPENAI_API_KEY=your-openai-key
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com