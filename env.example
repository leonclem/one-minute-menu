# Environment variables (do not commit real secrets)

# Google Generative AI ("Nano Banana")
NANO_BANANA_API_KEY=your_google_api_key_here

# Google Vision API (Python worker)
# If using application default credentials via JSON string
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# OpenAI (if used)
OPENAI_API_KEY=

# App config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Generation cost alert thresholds (optional; admin analytics)
# If set, triggers platform metric when exceeded
GENERATION_ALERT_DAILY_USD=25
GENERATION_ALERT_MONTHLY_USD=300